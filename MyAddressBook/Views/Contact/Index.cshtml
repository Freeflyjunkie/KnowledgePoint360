@{
    ViewBag.Title = "My Address Book";
}

@(Html.Kendo().Window()
    .Name("window")
    .Title("")
    .Animation(true)
    .Animation(animation =>
        {
            animation.Open(effect =>
                {
                    effect.Duration(AnimationDuration.Slow);
                    effect.Zoom(ZoomDirection.In);
                });

            animation.Close(effect =>
                {
                    effect.Duration(AnimationDuration.Slow);
                    effect.Zoom(ZoomDirection.Out);
                });
        })
    .Draggable()
    .Resizable()
    .Width(600)
    .Modal(false)
    .Visible(false)
    .Width(400)
    .Content("loading movie star information...")
    .Actions(actions => actions.Close())
)
<style type="text/css">
    .MiniText {
        font-size: 13px;
        font-style: italic;
        cursor: pointer;
        color: red;
        padding-top: 5px;
        height: 30px
    }

    .ShadowBoxing {
        box-shadow: 5px 5px 5px #888888; 
        border-radius: 30px;
    }

    .ShadowText {
        font-size: 20px;
        text-shadow: 5px 5px 5px #888888;
    }

    .HeaderHeight {
        height: 30px;
    }

    #MovieStarList {
        padding-bottom: 50px;
        clear: both;
    }

    .ImageList {
        float: left;
        padding-right: 20px;
    }

    .ImageBorder {
        border: 1px outset gray;
    }

    .StaticAddressBook {
        clear: both;
        position: absolute;
        top: 280px;
        width: 800px;
    }
</style>

<script type="text/javascript">
    $(DocumentIsReady);
    function DocumentIsReady() {

        // Hide Contact Grid
        $('#contacts').hide();

        // Wire All Events
        WireEvents();
    }

    function WireEvents() {
        // Build Guess Who Menu
        var stars = $('img.ImageBorder');
        stars
            .attr(
                {
                    title: 'Who Am I? <br/> Click to find out!',
                })        
            .css({
                height: 150,               
                opacity: .50,
                cursor: 'pointer'
            })
            .addClass('ShadowBoxing')
            .on({
                click: function (event) {
                    var window = $("#window").data("kendoWindow");
                    window.close();
                    GetWindowData(event.target.id);
                },

                mouseenter: function () {
                    $(this).animate(
                        {
                            opacity: 100,
                            height: 160
                        })
                },

                mouseleave: function () {
                    $(this).animate(
                        {
                            opacity: .50,
                            height: 150
                        })
                }
            });

        // Build Hide / Show
        var hideShowHeader = $('#hideHeader');
        hideShowHeader
            .on({
                click: function () {
                    $('#AddressBook').toggleClass('StaticAddressBook')
                    $('#MovieStarList').slideToggle('slow');

                    if ($('#hideHeader').text() == 'hide guessing game') {
                        $('#hideHeader').text('show guessing game');
                    }
                    else {
                        $('#hideHeader').text('hide guessing game');
                    }
                }
            });
    }

    var ddlItem;
    function additionalData(e) {
        return { selectedAddressBook: ddlItem }
    }

    function onChange() {
        $('#contacts').show();
        ddlItem = this.value();
        var grid = $("#contacts").data("kendoGrid");
        grid.dataSource.read();
    };

    function GetWindowData(controlID) {
        var data = { imgControlID: controlID };

        $.get('/Contact/GetStarInformation/', data, function (data) {
            var window = $("#window").data("kendoWindow");
            window.content($(data).find('[title="Description"]').html());
            window.title($(data).find('[title="Name"]').html());
            window.center();
            window.open();
        });
    }

</script>
<div class="MiniText">
    <span id="hideHeader">hide guessing game</span>
</div>
